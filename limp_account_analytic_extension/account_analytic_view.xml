        <record id="view_account_analytic_account_form_add_delegation_field" model="ir.ui.view">
            <field name="name">account.analytic.account.form.add_delegation_field</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="custom_manager_id"/>
                    <field name="delegation_id" />
                </field>
            </field>
        </record>

        <record id="view_account_analytic_line_form_add_delegation_id" model="ir.ui.view">
            <field name="name">account.analytic.line.form.add_delegation_id</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_form" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="delegation_id" />
                    <field name="manager_id"/>
                    <field name="employee_id"/>
                    <field name="partner_id"/>
                </field>
            </field>
        </record>

        <record id="view_account_analytic_line_tree_add_delegation_id" model="ir.ui.view">
            <field name="name">account.analytic.line.tree.add_delegation_id</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_tree" />
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="partner_id"/>
                </field>
                <xpath expr="/tree/field[@name='user_id']" position="after">
                    <field name="delegation_id" />
                    <field name="manager_id"/>
                    <field name="employee_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_analytic_line_filter_add_delegation_id" model="ir.ui.view">
            <field name="name">account.analytic.line.select.add_delegation_id</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_filter" />
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="user_id" position="before">
                    <field name="delegation_id" widget="selection" />
                    <field name="manager_id" widget="selection"/>
                    <field name="employee_id"/>
                    <field name="partner_id"/>
                </field>
                <filter string="User" position="after">
                    <filter string="Delegation" icon="terp-folder-green" domain="[]" context="{'group_by':'delegation_id'}"/>
                    <filter string="Responsible" icon="terp-folder-orange" domain="[]" context="{'group_by':'manager_id'}"/>
                    <filter string="Employee" icon="terp-personal" domain="[]" context="{'group_by':'employee_id'}"/>
                    <filter string="Partner" icon="terp-folder-yellow" domain="[]" context="{'group_by':'partner_id'}"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
