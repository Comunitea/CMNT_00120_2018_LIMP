<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_account_analytic_account_search_add_delegation_id" model="ir.ui.view">
            <field name="name">account.analytic.account.search.add_delegation_id</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="account.view_account_analytic_account_search" />
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="custom_manager_id"/>
                    <field name="delegation_id"/>
                    <field name="description"/>
                </field>
                <xpath expr="/search/group/filter[@string='Status']" position="after">
                    <filter string="Manager" icon="terp-personal" domain="[]" context="{'group_by': 'custom_manager_id'}"/>
                    <filter string="Delegation" icon="terp-folder-green" domain="[]" context="{'group_by':'delegation_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_analytic_account_tree_add_delegation_id" model="ir.ui.view">
            <field name="name">account.analytic.account.tree.add_delegation_id</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="account.view_account_analytic_account_tree" />
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name='code' position="replace">
                    <field name="date_start"/>
                    <field name="description"/>
                    <field name="code" invisible="1"/>
                    <field name="custom_manager_id"/>
                    <field name="delegation_id"/>
                </field>
                <!--field name="quantity_max" position="replace"/>
                <field name="quantity" position="replace">
                    <field name="quantity" invisible="1"/>
                </field MIGRACION: Campos inexistentes -->
                <field name="currency_id" position="replace">
                    <field name="currency_id" invisible="1"/>
                </field>
                <field name="debit" position="replace"/>
                <field name="credit" position="replace"/>
                <field name="balance" position="replace"/>
                <!--field name="quantity" position="replace"/-->
            </field>
        </record>

