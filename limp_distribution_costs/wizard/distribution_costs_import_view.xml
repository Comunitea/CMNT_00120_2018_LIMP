<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

        <record id="view_distribution_costs_import_form" model="ir.ui.view">
            <field name="name">view.distribution.costs.import.form</field>
            <field name="model">distribution.costs.import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import distribution costs">
                    <group colspan="2" col="4">
                        <field name="month"/>
                        <field name="year"/>
                        <newline/>
                        <field name="name"/>
                        <field name="file"/>
                    </group>
                    <newline/>
                    <button name="import_distribution_costs" type="object" string="Import" colspan="1"/>
                    <button icon='gtk-cancel' special="cancel" string="Cancel" colspan="1"/>
                </form>
            </field>
          </record>
          <record id="action_distribution_costs_import_form" model="ir.actions.act_window">
            <field name="name">Import distribution costs</field>
            <field name="res_model">distribution.costs.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_distribution_costs_import_form"/>
            <field name="target">new</field>
          </record>

          <menuitem id="menu_import_distribution_costs" action= "action_distribution_costs_import_form" name="Import distribution costs" parent="menu_timesheet" sequence="50" groups="base.group_hr_manager"/>


    </data>
</openerp>
