<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_product_price_list" model="ir.ui.view">
              <field name="name">Pricelist</field>
              <field name="model">print.product.pricelist</field>
              <field name="type">form</field>
              <field name="arch" type="xml">
                        <form string="Pricelist">
            <separator colspan="4" string="Calculate Product Price per unit base on price rules."/>
                            <field name="state_id"/>
                            <field name="price_list" widget="selection"/>
                            <field name="qty1" colspan="2" />
                            <field name="qty2" colspan="2" />
                            <field name="qty3" colspan="2" />
                            <field name="qty4" colspan="2" />
                            <field name="qty5" colspan="2" />
                                <separator colspan="4"/>
            <group col="2" colspan="4">
                 <button icon="gtk-cancel" special="cancel" string="Close"/>
                 <button name="print_report" string="Print"  type="object"  icon="gtk-print"/>
            </group>
                        </form>
              </field>
        </record>

        <act_window id="product.action_product_price_list"
                key2="client_print_multi"
            name="Price List"
                res_model="print.product.pricelist"
            src_model="product.product"
                view_mode="form" target="new" view_type="form" />

    </data>
</openerp>
