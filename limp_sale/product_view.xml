<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="product_normal_form_view_add_page" model="ir.ui.view">
            <field name="name">product.normal.form.add.page</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <page string="Information" position="after">
                    <page string="Price rules">
                        <field name="price_rule_ids" colspan="4" nolabel="1">
                            <tree string="Price rules" editable="top">
                                <field name="name"/>
                                <field name="range"/>
                                <field name="price"/>
                                <field name="cost_price"/>
                                <field name="province"/>
                            </tree>
                            <form string="Price rules">
                                <field name="name"/>
                                <field name="range"/>
                                <field name="price"/>
                                <field name="cost_price"/>
                                <field name="province"/>
                            </form>
                         </field>
                    </page>
                </page>
                <field name="volume" position="replace">
                    <field name="volume" digits="(14, 3)"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
