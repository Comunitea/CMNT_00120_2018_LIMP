<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="view_order_form_add_page" model="ir.ui.view">
            <field name="name">sale.order.form.add.page</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form/notebook/page[@string='Order Line']/field[@name='product_id']" position="replace">
                    <field colspan="4"
                    context="partner_id=parent.partner_id,quantity=product_uom_qty,pricelist=parent.pricelist_id,shop=parent.shop_id,uom=product_uom"
                    name="product_id"
                    on_change="product_id_change2(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, 'lang' in context and context['lang'], True, parent.date_order, product_packaging, parent.fiscal_position, False, parent.partner_shipping_id)"
                    domain="[('sale_ok','=',True),'|',('department_id','=',parent.department_id),('department_id','=',False)]"
                    />
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                    <field name="purchase_price"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/notebook/page[@string='Order Line']/field[@name='product_uom_qty']" position="replace">
                    <field
                    context="partner_id=parent.partner_id,quantity=product_uom_qty,pricelist=parent.pricelist_id,shop=parent.shop_id,uom=product_uom"
                    name="product_uom_qty"
                    on_change="product_id_change2(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, 'lang' in context and context['lang'], False, parent.date_order, product_packaging, parent.fiscal_position, True, parent.partner_shipping_id)"

                    />
                </xpath>
                <!--<page string="Other Information"  position="after">
                    <page string=" Frequency table">
                        <field colspan="4" name="freq_table" nolabel="1"/>
                    </page>
                </page>-->
                <page string="Other Information" position="before">
                    <page string="Frequency table">
                        <button name="get_all_tasks" type="object" string="Load tasks" colspan="4"/>
                        <field colspan="4" name="task_frequency_ids" nolabel="1">
                            <tree string="Frequency table" editable="top">
                                <field name="sequence"/>
                                <field name="task_id"/>
                                <field name="description"/>
                                <field name="lu"/>
                                <field name="ma"/>
                                <field name="mi"/>
                                <field name="ju"/>
                                <field name="vi"/>
                                <field name="sa"/>
                                <field name="do"/>
                                <field name="sm"/>
                                <field name="qc"/>
                                <field name="m"/>
                                <field name="bt"/>
                                <field name="tr"/>
                                <field name="ct"/>
                                <field name="st"/>
                                <field name="an"/>
                                <field name="s_n"/>
                            </tree>
                            <form string="Frequency table">
                                <field name="task_id" colspan ="4"/>
                                <field name="description" colspan ="4"/>
                                <field name="sequence"/>
                                <newline/>
                                <field name="lu"/>
                                <field name="ma"/>
                                <field name="mi"/>
                                <field name="ju"/>
                                <field name="vi"/>
                                <field name="sa"/>
                                <field name="do"/>
                                <field name="sm"/>
                                <field name="qc"/>
                                <field name="m"/>
                                <field name="bt"/>
                                <field name="tr"/>
                                <field name="ct"/>
                                <field name="st"/>
                                <field name="an"/>
                                <field name="s_n"/>
                             </form>
                        </field>
                    </page>
                </page>
                <field name="amount_total" position="after">
                    <field name="margin"/>
                    <field name="margin_percentage" />
                </field>
                <field name="project_id" position="after">
                    <field name="periodicity_id" widget="selection"/>
                </field>
                <field name="date_confirm" position="after">
                    <field name="validity_date"/>
                </field>
                <field name="company_id" position="replace"/>
                <field name="name" position="before">
                    <field name="company_id" widget="selection"/>
                    <field name="delegation_id" widget="selection"/>
                    <field name="department_id" widget="selection"/>
                    <field name="center_type_id" widget="selection"/>
                </field>
                <field name="note" position="after">
                    <separator string="Header notes" colspan="4"/>
                    <field name="header_notes" colspan="4" nolabel="1"/>
                    <separator string="Very important" colspan="4"/>
                    <field name="very_important_text" colspan="4" nolabel="1"/>
                </field>
                <field name="invoiced" position="replace">
                    <group col="4" colspan="2">
                        <field name="invoiced"/>
                        <field name="created_contract" groups="limp_contract.group_limp_administrative"/>
                        <field name="created_service_order" groups="limp_service_picking.group_waste_manager"/>
                        <field name="created_service_pick" groups="limp_service_picking.group_cleaning_user"/>
                    </group>
                </field>
                <field name="invoice_quantity" position="after">
                    <field name="show_total"/>
                </field>
                <button name="order_confirm" position="before">
                    <button name="create_contract" type="object" string="Create contract" icon="gtk-convert" attrs="{'invisible': ['|',('created_contract', '=', 1),('state','!=','manual')]}" groups="limp_contract.group_limp_administrative"/>
                    <button name="create_service_order" type="object" string="Create Service order" icon="gtk-convert" groups="limp_service_picking.group_waste_manager" attrs="{'invisible': ['|',('created_service_order', '=', 1),('state','!=','manual')]}"/>
                    <button name="%(action_view_create_service_pick_wzd)d" type="action" string="Create pick" icon="gtk-convert" attrs="{'invisible': ['|',('created_service_pick', '=', 1),('state','!=','manual')]}" groups="limp_service_picking.group_waste_manager,limp_service_picking.group_cleaning_user"/>
                </button>
                <field name="picking_ids" position="after">
                    <separator string="Contracts" colspan="4" groups="limp_contract.group_limp_administrative"/>
                    <field name="contract_ids" nolabel="1" colspan="4" groups="limp_contract.group_limp_administrative"/>
                    <!--<separator string="Service orders" colspan="4" groups="limp_service_picking.group_waste_manager"/>
                    <field name="service_order_ids" nolabel="1" colspan="4" groups="limp_service_picking.group_waste_manager"/>-->
                </field>
                <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                    <field name="purchase_price"/>
                </xpath>
                <xpath expr="//tree[@string='Sales Order Lines']/field[@name='name']" position="before">
                    <field name="sequence"/>
                </xpath>
                <xpath expr="//form[@string='Sales Order Lines']/notebook/page[@string='Order Line']/field[@name='product_uom_qty']" position="before">
                    <field name="sequence"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_tree_add_department_delegation" model="ir.ui.view">
            <field name="name">sale.order.tree.add_department_delegation</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="company_id" invisible="1"/>
                    <field name="delegation_id" invisible="1"/>
                    <field name="department_id" invisible="1"/>
                </field>
                <field name="state" position="after">
                    <field name="margin"/>
                    <field name="margin_percentage" widget="progressbar"/>
                </field>
            </field>
        </record>

        <record id="view_sales_order_filter_add_sec_filter_groups" model="ir.ui.view">
            <field name="name">sale.order.list.select.add_sec_filter_groups</field>
            <field name="model">sale.order</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <filter string="Order Date" position="after">
                    <separator orientation="vertical"/>
                    <filter string="Company" icon="terp-folder-orange" domain="[]" context="{'group_by':'company_id'}"/>
                    <filter string="Delegation" icon="terp-folder-green" domain="[]" context="{'group_by':'delegation_id'}"/>
                    <filter string="Department" icon="terp-folder-blue" domain="[]" context="{'group_by':'department_id'}"/>
                </filter>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_margin_sale_order_line_tree">
            <field name="name">sale.order.margin.line.view.tree</field>
            <field name="type">tree</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree" />
            <field name="arch" type="xml">
                <field name="price_subtotal" position="after">
                    <field name="margin"/>
                </field>
                <field name="product_id" position="after">
                    <field name="name"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
