<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

        <record id="search_employee_replacement_form" model="ir.ui.view">
            <field name="name">search.employee.replacement.form</field>
            <field name="model">search.employee.replacement</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Replacements">
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="location"/>
                    <field name="department_id"/>
                    <field name="employee_id"/>
                    <field name="hour_no"/>
                    <separator colspan="4" string="Possible replacements"/>
                    <field name="employee_ids" colspan="4" nolabel="1"/>
                    <group colspan="4">
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="gtk-ok" name="search_replacements" string="Search" type="object"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_search_employee_replacement">
            <field name="name">Search replacements</field>
            <field name="res_model">search.employee.replacement</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="search_employee_replacement_form"/>
        </record>

    </data>
</openerp>
