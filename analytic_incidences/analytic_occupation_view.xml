<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="analytic_occupation_form_add_set_incidence_btn" model="ir.ui.view">
            <field name="name">account.analytic.occupation.form.add_set_incidence_btn</field>
            <field name="model">account.analytic.occupation</field>
            <field name="inherit_id" ref="analytic_occupations.analytic_occupation_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <button name="set_active" string="Set active"
                    states="draft" type="object"
                    icon="gtk-go-forward" />
                </field>
               <field name="to_invoice" position="after">
                   <field name="parent_occupation_id" domain="[('analytic_account_id','=',analytic_account_id)]"/>
                </field>
           </field>
        </record>

        <record model="ir.actions.act_window" id="action_analytic_occupation_tree">
            <field name="name">Occupations</field>
            <field name="res_model">account.analytic.occupation</field>
            <field name="view_mode">tree,form,calendar,gantt</field>
            <field name="view_id" ref="analytic_occupations.analytic_occupation_tree"/>
            <field name="search_view_id" ref="analytic_occupations.analytic_occupation_filter"/>
        </record>

    </data>
</openerp>
