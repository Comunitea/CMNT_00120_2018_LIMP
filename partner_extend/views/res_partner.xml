<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_partner_vat_in_header" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base_vat.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="title" position="attributes">
                <attribute name="widget">selection</attribute>
            </field>
            <field name="email" position="attributes">
                <attribute name="placeholder">Email...</attribute>
            </field>
            <field name="phone" position="attributes">
                <attribute name="placeholder">Phone...</attribute>
            </field>
            <field name="mobile" position="attributes">
                <attribute name="placeholder">Mobile...</attribute>
            </field>
            <xpath expr="//field[@name='child_ids']/form//field[@name='title']" position="attributes">
                <attribute name="widget">selection</attribute>
                <attribute name="placeholder"></attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']" position="attributes">
                <attribute name="mode">tree</attribute>
            </xpath>
        </field>
    </record>

     <record id="view_partner_form_avoid_facturae" model="ir.ui.view">
        <field name="name">res.partner.form.avoid.facturae</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_es_facturae.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='facturae']" position="replace">
            </xpath>
            <field name="lang" position="after">
                <field name="facturae"/>
            </field>
            <xpath expr="//sheet/notebook/page/field[@name='child_ids']/form/sheet/group" position="after">
                <group>
                    <label for="facturae"/>
                    <field name="facturae"/>
                    <group  attrs="{'invisible': [('facturae', '=', False)]}">
                        <field name="invoice_integration_method_ids" widget="many2many_checkboxes"/>
                        <field name="organo_gestor" attrs="{'required': [('facturae', '=', True)]}"/>
                        <field name="unidad_tramitadora" attrs="{'required': [('facturae', '=', True)]}"/>
                        <field name="oficina_contable" attrs="{'required': [('facturae', '=', True)]}"/>
                        <field name="organo_proponente"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="mail.res_partner_view_form_inherit_mail" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.mail</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']//field[@name='user_id']" position="after">
                <field name="message_bounce" groups="base.group_no_one"/>
                <field name="is_blacklisted" invisible="1"/>
            </xpath>
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_partner_tree_add_fields" model="ir.ui.view">
        <field name="name">res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="street"/>
            </field>
            <field name="phone" position="after">
                <field name="mobile"/>
            </field>
            <field name="email" position="after">
                <field name="type"/>
            </field>
            <tree position="attributes">
                <attribute name="decoration-info">is_company == True</attribute>
            </tree>
        </field>
    </record>

    <record id="base.action_partner_form" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_customer":1, "default_is_company": 1}</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
    </record>

    <record id="base.action_partner_form_view1" model="ir.actions.act_window.view">
        <field eval="3" name="sequence"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="base.res_partner_kanban_view"/>
        <field name="act_window_id" ref="base.action_partner_form"/>
    </record>

    <record id="contacts.action_contacts" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban,activity</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
    </record>

    <record id="contacts.action_contacts_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="base.res_partner_kanban_view"/>
        <field name="act_window_id" ref="contacts.action_contacts"/>
    </record>

</odoo>
