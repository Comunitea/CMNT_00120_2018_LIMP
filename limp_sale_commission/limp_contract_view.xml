<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="limp_contract_form_add_agents" model="ir.ui.view">
            <field name="name">limp.contract.form.add_agents</field>
            <field name="model">limp.contract</field>
            <field name="inherit_id" ref="limp_contract.limp_contract_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                 <page string="Upamounts history" position="after">
                    <page string="Commissions">
                       <separator colspan="2" string="Agents/Consultancy"/>
                       <newline/>
                       <field name="contract_agent_ids" nolabel="1">
                            <tree string="Agents and Commissions" editable="top">
                                <field name="agent_id" on_change="onchange_agent_id(agent_id)"/>
                                <field name="commission_id" on_change="onchange_commission_id(agent_id,commission_id)"/>
                                <field name="invoice_settle"/>
                            </tree>
                        </field>
                    </page>
                 </page>
            </field>
        </record>
         <record model="ir.ui.view" id="view_limp_contract_agent_comision_tree">
            <field name="name">limp_contract.agent.comision.tree</field>
            <field name="model">limp.contract.agent</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Agents">
                    <field name="contract_id"/>
                    <field name="partner_id"/>
                    <field name="agent_id" on_change="onchange_agent_id(agent_id)"/>
                    <field name="commission_id" on_change="onchange_commission_id(agent_id,commission_id)"/>
                    <field name="invoice_settle"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="limp_contract_agent_comision_form">
            <field name="name">limp.contract.agent.comision.form.</field>
            <field name="model">limp.contract.agent</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Agents">
                    <field name="agent_id" on_change="onchange_agent_id(agent_id)"/>
                    <field name="commission_id" on_change="onchange_commission_id(agent_id,commission_id)"/>
                    <field name="invoice_settle"/>
                </form>
            </field>
        </record>

    </data>
</openerp>
