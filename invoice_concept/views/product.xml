<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_normal_form_view_add_wildcardas" model="ir.ui.view">
        <field name="name">product.normal.form_add_wildcards</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="description_sale" position="after">
                <separator colspan="4" string="Replacements"/>
                <group col="6" colspan="4">
                    <span colspan="2">Current Year with Century: %%(year)s</span>
                    <span colspan="2">Current Month: %%(month)s</span>
                </group>
            </field>
        </field>
    </record>

</odoo>
