<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="prior_transfer_documentation_form" model="ir.ui.view">
        <field name="name">prior.transfer.documentation.form</field>
        <field name="model">prior.transfer.documentation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="check_NT_data" type="object" string="Check data"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="producer_promoter_id"/>
                        <field name="operator_partner_id"/>
                        <field name="manager_partner_id"/>
                        <field name="notification_date"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="freq"/>
                    </group>
                     <separator string="Wastes" colspan="4"/>
                    <field name="line_ids" nolabel="1" colspan="4">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="waste_id"/>
                            <field name="name"/>
                            <field name="operation_type"/>
                            <field name="dangerous_motive"/>
                            <field name="no_compute"/>
                            <field name="net_weight"/>
                            <field name="volume"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="prior_transfer_documentation_tree" model="ir.ui.view">
        <field name="name">prior.transfer.documentation.tree</field>
        <field name="model">prior.transfer.documentation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="producer_promoter_id"/>
                <field name="operator_partner_id"/>
                <field name="manager_partner_id"/>
                <field name="notification_date"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="action_prior_transfer_documentation_open" model="ir.actions.act_window">
        <field name="name">Prior Transfer Documentations (NT)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prior.transfer.documentation</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="prior_transfer_documentation_tree"/>
    </record>

    <menuitem action="action_prior_transfer_documentation_open" id="menu_prior_transfer_documentation"  name="Prior Transfer Documentations (NT)" parent="limp_reports.reports_folder_id" groups="limp_service_picking.group_waste_manager"/>

</odoo>
