<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="ler_tree" model="ir.ui.view">
        <field name="name">ler.tree</field>
        <field name="model">waste.ler.code</field>
        <field name="inherit_id" ref="waste_management.ler_tree"/>
        <field name="arch" type="xml">
            <field name="density" position="after">
                <field name="operation_type"/>
                <field name="dangerous_motive"/>
            </field>
        </field>
    </record>

    <record id="ler_form" model="ir.ui.view">
        <field name="name">ler.form</field>
        <field name="model">waste.ler.code</field>
        <field name="inherit_id" ref="waste_management.ler_form"/>
        <field name="arch" type="xml">
            <field name="density" position="after">
                <field name="operation_type"/>
                <field name="dangerous_motive" attrs="{'invisible': [('dangerous', '!=', True)]}"/>
            </field>
        </field>
    </record>

</odoo>
