<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_partner_form_add_authorizations" model="ir.ui.view">
        <field name="name">res.partner.form.add_new_fields_limp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="limp_service_picking.view_partner_form_add_new_fields_limp"/>
        <field name="arch" type="xml">
            <field name="manager_authorization_no" position="after">
                <field name="ler_authorization_ids" colspan="4">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="authorization_type"/>
                        <field name="other_state"/>
                        <field name="ler_code_ids" widget="many2many_tags"/>
                    </tree>
                </field>
            </field>
            <field name="vat" position="before">
                <field name="association_type"/>
                <field name="vialType" />
            </field>
            <xpath expr="//sheet/notebook/page/field[@name='child_ids']/form/sheet//field[@name='title']" position="after">
                <field name="vialType" />
            </xpath>
        </field>
    </record>

    <record id="res_company_form_view_inherit_gaia" model="ir.ui.view">
        <field name="name">res.company.form.inherit.gaia</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_registry']" position="after">
                <field name="gaia_test"/>
            </xpath>
        </field>
    </record>

</odoo>
