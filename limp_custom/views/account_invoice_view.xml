<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="invoice_form_add_info" model="ir.ui.view">
            <field name="name">account.invoice.form.add_info</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="before">
                    <field name="commercial_partner_id"/>
                </field>
                <button name="preview_invoice" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <field name="journal_id" position="after">
                    <field name="add_info"/>
                </field>
                <xpath expr="//field[@name='tax_line_ids']/tree/field[@name='amount']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_line_ids']/tree/field[@name='amount_total']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="invoice_tree_add_info" model="ir.ui.view">
            <field name="name">account.invoice.tree.add_info</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_invoice_currency.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="before">
                    <field name="commercial_partner_id"/>
                </field>
                <field name="partner_id" position="after">
                    <field name="add_info" string="Add. info"/>
                </field>
                <field name="user_id" position="replace">
                    <field name="user_id" invisible="1"/>
                </field>
                <field name="currency_id" position="replace">
                    <field name="currency_id" invisible="1"/>
                </field>
                <field name="name" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
                <field name="amount_total_company_signed" position="replace"/>
                <field name="residual_company_signed" position="replace"/>
                <field name="amount_total_signed" position="attributes">
                    <attribute name="sum">Total</attribute>
                </field>
                <tree position="attributes">
                    <attribute name="decoration-success">state == 'open'</attribute>
                </tree>
            </field>
        </record>

        <record id="invoice_supplier_tree" model="ir.ui.view">
            <field name="name">account.invoice.supplier.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="decoration-success">state == 'open'</attribute>
                </tree>
            </field>
        </record>

        <record id="view_account_invoice_filter_add_info" model="ir.ui.view">
            <field name="name">account.invoice.select.add_info</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="add_info"/>
                    <field name="date_invoice"/>
                </field>
            </field>
        </record>

        <record id="invoice_supplier_tree_rep_cur_amounts" model="ir.ui.view">
            <field name="name">account.invoice.supplier.currency.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_invoice_currency.invoice_supplier_tree"/>
            <field name="arch" type="xml">
                <field name="amount_total_company_signed" position="replace"/>
                <field name="residual_company_signed" position="replace"/>
            </field>
        </record>

        <template id="entity_fix_buyer_type" inherit_id="l10n_es_facturae.entity">
            <xpath expr="//t[@t-set='buyer_type']" position="attributes">
                <attribute name="t-value">'J'</attribute>
            </xpath>
            <xpath expr="//LegalEntity/CorporateName" position="attributes">
                <attribute name="t-esc">partner.commercial_partner_id.name</attribute>
            </xpath>
            <xpath expr="//LegalEntity/TradeName" position="attributes">
                <attribute name="t-esc">partner.commercial_partner_id.name</attribute>
            </xpath>
            <xpath expr="//t[@t-value='partner.oficina_contable']" position="after">
                <t t-set="centre_desc" t-value="partner.oficina_contable_desc"/>
            </xpath>
            <xpath expr="//t[@t-value='partner.organo_gestor']" position="after">
                <t t-set="centre_desc" t-value="partner.organo_gestor_desc"/>
            </xpath>
            <xpath expr="//t[@t-value='partner.unidad_tramitadora']" position="after">
                <t t-set="centre_desc" t-value="partner.unidad_tramitadora_desc"/>
            </xpath>
            <xpath expr="//t[@t-value='partner.organo_proponente']" position="after">
                <t t-set="centre_desc" t-value="partner.organo_proponente_desc"/>
            </xpath>
        </template>

        <template id="administrative_center_cust_desc" inherit_id="l10n_es_facturae.administrative_center">
            <xpath expr="//CentreDescription" position="attributes">
                <attribute name="t-esc">centre_desc or partner.name</attribute>
            </xpath>
        </template>

</odoo>
