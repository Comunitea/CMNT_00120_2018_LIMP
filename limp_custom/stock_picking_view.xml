<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_picking_internal_search_add_date" model="ir.ui.view">
            <field name="name">view.picking.internal.search.add_dates</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="date"/>
                    <field name="min_date"/>
                </field>
            </field>
        </record>

        <record id="view_picking_out_search_add_dates" model="ir.ui.view">
            <field name="name">view.picking.out.search.add_dates</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_out_search"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <newline/>
                    <field name="date"/>
                    <field name="min_date"/>
                </field>
            </field>
        </record>

        <record id="view_picking_in_search_add_dates" model="ir.ui.view">
            <field name="name">view.picking.in.search.add_dates</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_in_search"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <newline/>
                    <field name="date"/>
                    <field name="min_date"/>
                </field>
                <filter string="Back Orders" position="after">
                     <filter string="To be invoice" name="to_invoice" icon="terp-dolar" domain="[('invoice_state', '=', '2binvoiced'),('state', '=', 'done')]" />
                </filter>
            </field>
        </record>



    <record id="view_picking_form_add_partner" model="ir.ui.view">
        <field name="name">stock.picking.form.add_partner</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="address_id" position="before">
                <field name="partner_id" readonly="1" colspan="4"/>
            </field>
        </field>
    </record>

    <record id="view_picking_out_form_add_partner" model="ir.ui.view">
        <field name="name">stock.picking.out.form.add_partner</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_out_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="address_id" position="before">
                <field name="partner_id" readonly="1" colspan="4"/>
            </field>
            <field name="note" position="after">
                <separator string="Internal notes" colspan="4"/>
                <field colspan="4" name="internal_notes" nolabel="1"/>
            </field>
        </field>
    </record>

    <record id="view_picking_in_form_add_partner" model="ir.ui.view">
        <field name="name">stock.picking.in.form.add_partner</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_in_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="address_id" position="before">
                <field name="partner_id" readonly="1" colspan="4"/>
            </field>
            <field name="note" position="after">
                <separator string="Internal notes" colspan="4"/>
                <field colspan="4" name="internal_notes" nolabel="1"/>
            </field>
        </field>
    </record>

    </data>
</openerp>
