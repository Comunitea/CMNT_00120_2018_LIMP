<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="limp_contract_line_task_rel_tree" model="ir.ui.view">
            <field name="name">limp.contract.line.task.rel.tree</field>
            <field name="model">limp.contract.line.task.rel</field>
            <field name="arch" type="xml">
                <tree string="Contract tasks" editable="top">
                    <field name="contract_task_id"/>
                    <field name="monday"/>
                    <field name="tuesday"/>
                    <field name="wednesday"/>
                    <field name="thursday"/>
                    <field name="friday"/>
                    <field name="saturday"/>
                    <field name="sunday"/>
                    <field name="observations"/>
                </tree>
            </field>
        </record>

        <record id="limp_contract_line_task_rel_form" model="ir.ui.view">
            <field name="name">limp.contract.line.task.rel.form</field>
            <field name="model">limp.contract.line.task.rel</field>
            <field name="arch" type="xml">
                <form string="Contract task">
                    <field name="contract_task_id" colspan="4"/>
                    <field name="monday"/>
                    <field name="tuesday"/>
                    <field name="wednesday"/>
                    <field name="thursday"/>
                    <field name="friday"/>
                    <field name="saturday"/>
                    <field name="sunday"/>
                    <separator string="Observations" colspan="4"/>
                    <field name="observations" colspan="4" nolabel="1"/>
                </form>
            </field>
        </record>

        <record id="limp_contract_line_task_rel_search" model="ir.ui.view">
            <field name="name">limp.contract.line.task.rel.search</field>
            <field name="model">limp.contract.line.task.rel</field>
            <field name="arch" type="xml">
                <search string="Contract tasks">
                    <field name="contract_task_id"/>
                </search>
            </field>
        </record>
</odoo>
