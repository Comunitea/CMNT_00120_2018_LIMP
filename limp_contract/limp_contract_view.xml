<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="limp_contract_tree" model="ir.ui.view">
            <field name="name">limp.contract.tree</field>
            <field name="model">limp.contract</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Contracts">
                    <field name="name" string="Name" required="0"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="description"/>
                    <field name="date_start"/>
                    <field name="date"/>
                    <field name="monthly_amount"/>
                    <field name="amount"/>
                    <field name="company_id"/>
                    <field name="delegation_id"/>
                    <field name="department_id"/>
                    <field name="state"/>
                    <field name="manager_id" string="Manager"/>
                    <field name="privacy"/>
                </tree>
            </field>
        </record>

        <record id="limp_contract_form" model="ir.ui.view">
            <field name="name">limp.contract.form</field>
            <field name="model">limp.contract</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Contract">
                    <group col="6" colspan="4">
                        <field name="company_id" colspan="2" widget="selection" required="1"/>
                        <field name="delegation_id" colspan="2" widget="selection" required="1"/>
                        <field name="department_id" colspan="2" widget="selection" required="1"/>
                    </group>
                    <group colspan="4">
                        <field name="name" string="Name" readonly="1" required="0"/>
                        <newline/>
                        <field name="description" colspan="4" widget="char" size="255"/>
                        <field name="partner_id" string="Customer" required="1" on_change="onchange_partner_id(partner_id)"/>
                        <field name="contact_id" domain="[('partner_id','=',partner_id)]"/>
                        <field name="manager_id" string="Manager" required="1"/>
                    </group>
                    <notebook colspan="4">
                        <page string="General">
                            <field name="periodicity" invisible="1"/>
                            <field name="monthly_amount"/>
                            <field name="amount"/>
                            <field name="offered_hours" invisible="1"/>
                            <field name="hours_per_week" invisible="1"/>
                            <group col="6" colspan="4">
                                <field name="date_start"/>
                                <field name="contract_duration"/>
                                <field name="contract_end_date"/>
                                <field name="request_prorogation_date"/>
                                <field name="prorogation_date"/>
                                <field name="prorogation_end_date"/>
                                <field name="request_upamount_date"/>
                                <field name="upamount_date"/>
                                <field name="signature_date"/>
                                <field name="privacy"/>
                            </group>
                            <field name="date"/>
                            <field name="address_id" domain="[('partner_id', '=', partner_id)]" required="1"/>
                            <field name="prorogation_notes" colspan="4"/>
                        </page>
                        <page string="Invoicing" groups="base.group_no_one">

                            <notebook colspan="4">
                                <page string="Invoice General">
                                    <field name="bank_account_id" domain="[('partner_id', '=', partner_id)]"/>
                                    <field name="currency_id"/>
                                    <field name="payment_term_id"/>
                                    <field name="payment_type_id"/>
                                    <field name="last_invoice_date"/>
                                    <field name="analytic_account_id" required="0" readonly="1"/>
                                    <field name="parent_id"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="quantity"/>
                                    <field name="balance"/>
                                    <field name="address_invoice_id" domain="[('partner_id', '=', partner_id)]" required="1"/>
                                    <field name="address_tramit_id" domain="[('partner_id', '=', partner_id),('type','=','tramit')]"/>
                                    <field name="invoice_header"/>
                                    <field name="analytic_distribution_id"/>
                                </page>
                                <page string="Invoice Concepts">
                                    <group col="8" colspan="4">
                                        <field name="include_pickings"/>
                                        <field name="group_concepts"/>
                                        <field name="group_products" attrs="{'invisible':[('group_concepts','!=',True)]}"/>
                                        <field name="group_products_each_invoice" attrs="{'invisible':[('group_products','!=',True)]}"/>
                                    </group>
                                    <field name="concept_ids" nolabel="1" colspan="4"/>
                                </page>
                                <page string="Invoice history">
                                    <field name="invoice_ids" nolabel="1" colspan="4"/>
                                </page>
                                <page string="Upamounts history">
                                    <field name="upamount_history_ids" nolabel="1" colspan="4"/>
                                </page>
                            </notebook>
                        </page>
                        <page string="Home help">
                            <field name="home_help_line_ids" nolabel="1" colspan="4" context="{'c_manager_id' : manager_id,'partner_id' : partner_id, 'parent_id' : analytic_account_id, 'c_delegation_id' : delegation_id, 'company_id' : company_id, 'c_department_id' : department_id, 'default_contract_id': active_id}"/>
                        </page>
                        <page string="Cleaning">
                            <field name="cleaning_line_ids" nolabel="1" colspan="4" context="{'c_manager_id' : manager_id,'partner_id' : partner_id, 'parent_id' : analytic_account_id, 'c_delegation_id' : delegation_id, 'company_id' : company_id, 'c_department_id' : department_id, 'default_contract_id': active_id}"/>
                        </page>
                        <!--<page string="Waste">
                            <field name="waste_line_ids" nolabel="1" colspan="4" context="{'c_manager_id' : manager_id,'partner_id' : partner_id, 'parent_id' : analytic_account_id, 'c_delegation_id' : delegation_id, 'company_id' : company_id, 'c_department_id' : department_id}" groups="limp_service_picking.group_waste_manager"/>
                        </page>-->
                        <page string="Waste">
                            <separator string="Waste" colspan="4"/>
                            <field name="stock_service_picking_ids" nolabel="1" colspan="4"
                                context="{'default_parent_id' : analytic_account_id, 'default_picking_type': 'wastes', 'type': 'wastes', 'form_view_ref': 'limp_service_picking.stock_service_picking_form',
                                        'default_delegation_id' : delegation_id, 'default_partner_id': partner_id, 'default_manager_id': manager_id, 'default_address_invoice_id': address_invoice_id, 'default_address_id': address_id,
                                        'default_ccc_account_id': bank_account_id, 'default_payment_type': payment_type_id, 'default_payment_term': payment_term_id, 'default_privacy': privacy, 'default_address_tramit_id': address_tramit_id}"/>
                        </page>
                        <page string="Service Picking">
                            <separator string="Service Picking" colspan="4"/>
                            <field name="stock_sporadic_service_picking_ids" nolabel="1" colspan="4"
                                context="{'default_parent_id' : analytic_account_id, 'default_picking_type': 'sporadic', 'type': 'sporadic', 'form_view_ref': 'limp_service_picking.stock_sporadic_service_picking_form',
                                        'default_delegation_id' : delegation_id, 'default_partner_id': partner_id, 'default_manager_id': manager_id, 'default_address_invoice_id': address_invoice_id, 'default_address_id': address_id,
                                        'default_ccc_account_id': bank_account_id, 'default_payment_type': payment_type_id, 'default_payment_term': payment_term_id, 'default_privacy': privacy, 'default_address_tramit_id': address_tramit_id}"/>
                        </page>
                        <page string="Maintenance tasks" groups="limp_service_picking.group_cleaning_user">
                            <field name="maintenance_task_ids" nolabel="1" colspan="4">
                                <tree>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="interval"/>
                                    <field name="interval_count"/>
                                    <field name="contract_line_id" domain="[('id', 'child_of', [parent.analytic_account_id])]"/>
                                    <field name="last_execution_date"/>
                                    <field name="end_date"/>
                                    <field name="next_execution_date"/>
                                    <button name="execute_maintenace" type="object" icon="gtk-ok" string="Execute"/>
                                </tree>
                                <form>
                                    <field name="name" colspan="4"/>
                                    <field name="start_date"/>
                                    <field name="contract_line_id" domain="[('id', 'child_of', [parent.analytic_account_id])]"/>
                                    <field name="interval"/>
                                    <field name="interval_count"/>
                                    <field name="last_execution_date"/>
                                    <field name="next_execution_date"/>
                                    <field name="end_date"/>
                                    <button name="execute_maintenace" type="object" icon="gtk-ok" string="Execute"/>
                                </form>
                            </field>
                        </page>
                        <page string="Notes">
                            <separator string="Description" colspan="4"/>
                            <field name="note" nolabel="1" colspan="4" widget="text"/>
                            <separator string="Notes" colspan="4"/>
                            <field name="contract_note_ids" nolabel="1" colspan="4">
                                <tree string="Notes" editable="top">
                                    <field name="date"/>
                                    <field name="user_id"/>
                                    <field name="name"/>
                                </tree>
                                <form string="Note">
                                    <field name="date"/>
                                    <field name="user_id"/>
                                    <separator string="Description" colspan="4"/>
                                    <field name="name" nolabel="1" colspan="4"/>
                                </form>
                            </field>
                        </page>
                        <page string="Active remunerations">
                            <field name="active_remuneration_ids" nolabel="1" colspan="4" context="{'default_analytic_account_id': analytic_account_id}"/>
                        </page>
                        <page string="Active timesheets">
                            <field name="active_employee_ids" nolabel="1" colspan="4" context="{'default_delegation_id': delegation_id, 'default_responsible_id': manager_id, 'default_department_id': department_id}">
                                <tree string="Timesheet" editable="top">
                                    <field name="date"/>
                                    <field name="employee_id"/>
                                    <field name="description"/>
                                    <field name="hours" widget="float_time" sum="Total hours" on_change="onchange_hours(0.0,0.0,hours,price_hours,extra_hours,quantity)"/>
                                    <field name="extra_hours" widget="float_time" sum="Total extra hours" on_change="onchange_qtys(0.0,0.0,hours,price_hours,extra_hours,quantity)"/>
                                    <field name="price_hours" on_change="onchange_qtys(0.0,0.0,hours,price_hours,extra_hours,quantity)"/>
                                    <field name="quantity" sum="Total qty." on_change="onchange_qtys(0.0,0.0,hours,price_hours,extra_hours,quantity)"/>
                                    <field name="pending_qty"/>
                                    <field name="pending_distribute_qty" sum="Total Pending"/>
                                    <field name="done"/>
                                    <field name="old"/>
                                    <field name="delegation_id"/>
                                    <field name="department_id"/>
                                    <field name="responsible_id"/>
                                </tree>
                                <form string="Timesheet">
                                    <field name="name" readonly="1"/>
                                    <field name="date"/>
                                    <field name="employee_id"/>
                                    <field name="description" colspan="4"/>
                                    <field name="extra_hours" widget="float_time" on_change="onchange_qtys(0.0,0.0,hours,price_hours,extra_hours,quantity)"/>
                                    <field name="price_hours" on_change="onchange_qtys(0.0,0.0,hours,price_hours,extra_hours,quantity)"/>
                                    <field name="hours" widget="float_time" on_change="onchange_hours(0.0,0.0,hours,price_hours,extra_hours,quantity)"/>
                                    <field name="quantity" on_change="onchange_qtys(0.0,0.0,hours,price_hours,extra_hours,quantity)"/>
                                    <field name="pending_qty"/>
                                    <field name="pending_distribute_qty"/>
                                    <field name="done"/>
                                    <field name="old"/>
                                    <field name="delegation_id"/>
                                    <field name="department_id"/>
                                    <field name="responsible_id"/>
                                </form>
                            </field>
                        </page>
                        <page string="Consumptions">
                           <field name="analytic_move_ids" nolabel="1" colspan="4" context="{'employee_id': manager_id}">
                               <tree string="Consumptions" editable="top">
                                    <field name="employee_id"/>
                                    <field name="location_id"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="state" invisible="1"/>
                                    <field name="date"/>
                               </tree>
                               <form string="Consumption">
                                    <field name="employee_id"/>
                                    <field name="location_id"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="move_id"/>
                                    <field name="state"/>
                                    <field name="date"/>
                               </form>
                           </field>
                        </page>
                    </notebook>
                    <group colspan="4" col="6">
                        <field name="state"/>
                        <button name="act_confirm" type="object" string="Confirm" colspan="1" states="draft" icon="gtk-ok"/>
                        <button name="%(action_contract_sign)d" string="Sign contract" type="action" colspan="1" target="new" states="wait_signature" icon="gtk-go-forward" />
                        <button name="act_cancel" type="object" string="Cancel" confirm="Are you sure you want to cancel this contract?" colspan="1" states="draft,wait_signature,open" icon="gtk-cancel"/>
                        <button name="act_close" type="object" string="Close" colspan="1" states="open" icon="gtk-close" confirm="Are you sure of close this contract and his lines?"/>
                        <button name="act_reopen" type="object" string="Reopen" colspan="1" states="close" icon="gtk-undo"/>
                        <button name="act_draft" type="object" string="Set to draft" colspan="1" states="cancel" icon="gtk-undo"/>
                        <button name="%(contract_toinvoice_wzd_action)d" type="action" string="Invoice" colspan="1" states="open,close" icon="gtk-execute"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="limp_contract_search" model="ir.ui.view">
            <field name="name">limp.contract.search</field>
            <field name="model">limp.contract</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Contracts">
                    <group col="8" colspan="4">
                        <filter icon="terp-document-new" string="Draft" domain="[('state', '=','draft')]" help="Draft contracts"/>
                        <filter icon="terp-gtk-media-pause" string="Pending" domain="[('state','=','wait_signature')]" help="Pending contracts"/>
                        <filter icon="terp-camera_test" string="Current" domain="[('state','=','open')]" help="Current contracts" name="active"/>
                        <filter icon="gtk-go-up" string="To upamount" help="Contracts pending to upamount over a month" domain="[('state', 'not in', ['close', 'cancelled']), ('upamount_date', '&gt;=', str(time.localtime()[0])+'-'+str(time.localtime()[1]).zfill(2)+'-'+str(time.localtime()[2]).zfill(2)), ('upamount_date', '&lt;=', time.localtime()[1] == 12 and str(time.localtime()[0]+1)+'-01-'+str(time.localtime()[2]).zfill(2) or str(time.localtime()[0])+'-'+str(time.localtime()[1] + 1).zfill(2)+'-'+str(time.localtime()[2]).zfill(2))]"/>
                        <filter icon="gtk-close" string="Closed" help="Closed Contracts" domain="[('state', '=', 'close')]"/>
                        <filter icon="gtk-cancel" string="Canceled" help="Canceled Contracts" domain="[('state', '=', 'cancelled')]"/>
                        <separator orientation="vertical"/>
                        <field name="name"/>
                        <field name="partner_id" string="Customer"/>
                        <field name="description"/>
                        <field name="code"/>
                        <field name="department_id" widget="selection"/>
                        <field name="delegation_id" widget="selection"/>
                        <field name="manager_id" widget="selection" string="Manager"/>
                    </group>
                    <newline/>
                    <group col="6" colspan="4">
                        <field name="date_start"/>
                        <field name="date"/>
                        <field name="privacy"/>
                        <field name="request_prorogation_date"/>
                        <newline/>
                        <field name="prorogation_date"/>
                        <field name="request_upamount_date"/>
                        <field name="upamount_date"/>
                        <field name="contract_end_date"/>
                    </group>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Manager" icon="terp-personal" domain="[]" context="{'group_by':'manager_id'}"/>
                        <filter string="Associated Partner" icon="terp-partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Company" icon="terp-folder-orange" domain="[]" context="{'group_by':'company_id'}"/>
                        <filter string="Delegation" icon="terp-folder-green" domain="[]" context="{'group_by':'delegation_id'}"/>
                        <filter string="Department" icon="terp-folder-blue" domain="[]" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <act_window
            id="contract_home_help_lines_link"
            name="Home help lines"
            res_model="limp.contract.line.home.help"
            src_model="limp.contract"
            view_mode="tree,form"
            domain="[('contract_id', '=', active_id)]"
        />

        <act_window
            id="contract_hom_help_lines_link"
            name="Cleaning lines"
            res_model="limp.contract.line.cleaning"
            src_model="limp.contract"
            view_mode="tree,form"
            domain="[('contract_id', '=', active_id)]"
        />


        <record id="action_limp_contract" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">limp.contract</field>
            <field name="view_type">form</field>
            <field name="context">{"search_default_department_id": department_id, "search_default_active":eval('True')}</field>
            <field name="view_id" ref="limp_contract_tree"/>
            <field name="search_view_id" ref="limp_contract_search"/>
        </record>

        <menuitem id="menu_limp_contract" sequence="10" name="Contracts"/>

        <menuitem id="menu_limp_contract_contract" parent="menu_limp_contract" name="Contracts"/>

        <menuitem action="action_limp_contract" id="menu_limp_contract_open" parent="menu_limp_contract_contract" name="Contracts"/>

        <menuitem id="menu_limp_contract_conf" parent="menu_limp_contract" name="Configuration" sequence="50"/>

    </data>
</openerp>
