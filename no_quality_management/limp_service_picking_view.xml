<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="stock_service_picking_form_add_no_quality" model="ir.ui.view">
            <field name="name">stock.service.picking.form.add_no_quality</field>
            <field name="model">stock.service.picking</field>
            <field name="inherit_id" ref="limp_service_picking.stock_service_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="amount_total" position="after">
                    <field name="no_quality"/>
                </field>
                <field name="intercompany" position="replace">
                    <field name="intercompany" on_change="onchange_intercompany(intercompany)"/>
                </field>
            </field>
        </record>

        <record id="stock_sporadic_service_picking_form_add_no_quality" model="ir.ui.view">
            <field name="name">stock.sporadic.service.picking.form.add_no_quality</field>
            <field name="inherit_id" ref="limp_service_picking.stock_sporadic_service_picking_form"/>
            <field name="model">stock.service.picking</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="amount_total" position="after">
                    <field name="no_quality"/>
                </field>
                <field name="intercompany" position="replace">
                    <field name="intercompany" on_change="onchange_intercompany(intercompany)"/>
                </field>
            </field>
        </record>

        <record id="stock_sporadic_service_picking_search_add_no_quality" model="ir.ui.view">
            <field name="name">stock.sporadic.service.picking.search.add_no_quality</field>
            <field name="model">stock.service.picking</field>
            <field name="inherit_id" ref="limp_service_picking.stock_sporadic_service_picking_search"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="picking_date" position="after">
                    <field name="no_quality"/>
                </field>
            </field>
        </record>

        <record id="stock_service_picking_search_add_no_quality" model="ir.ui.view">
            <field name="name">stock.service.picking.search.add_no_quality</field>
            <field name="model">stock.service.picking</field>
            <field name="inherit_id" ref="limp_service_picking.stock_service_picking_search"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="retired_date" position="after">
                        <field name="no_quality"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
