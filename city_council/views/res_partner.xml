<odoo>

    <record id="res_partner_add_council" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="country_id" position="before">
                <field name="council_id" placeholder="Council" options='{"no_open": True}'/>
                <field name="region_id" placeholder="Region" options='{"no_open": True}'/>
            </field>
        </field>
    </record>

    <record id="res_better_zip_add_council" model="ir.ui.view">
        <field name="name">res.city.form</field>
        <field name="model">res.city</field>
        <field name="inherit_id" ref="base_location.view_city_form"/>
        <field name="arch" type="xml">
            <field name="state_id" position="after">
                <field name="council_id"/>
            </field>
        </field>
    </record>

    <record id="view_partner_short_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_short_form"/>
        <field name="arch" type="xml">
            <field name="country_id" position="before">
                <field name="council_id" placeholder="Council" options='{"no_open": True}'/>
                <field name="region_id" placeholder="Region" options='{"no_open": True}'/>
            </field>
        </field>
    </record>

</odoo>
