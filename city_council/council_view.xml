        <field name="model">city.city</field>
        <field name="inherit_id" ref="city.view_city_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="council_id" required="1"/>
            </field>
        </field>
    </record-->

    </data>
</openerp>
