<openerp>
    <data>

    <record model="ir.ui.view" id="view_city_council_tree">
        <field name="name">city.council.tree</field>
        <field name="model">city.council</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Councils">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_city_council_form">
        <field name="name">city.council.form</field>
        <field name="model">city.council</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Council">
                <field name="name"/>
                <separator string="Cities" colspan="4"/>
                <field name="city_ids" colspan="4" nolabel="1">
                    <tree editable="top">
                        <field name="zipcode"/>
                        <field name="name"/>
                        <field name="state_id"/>
                    </tree>
                    <form>
                        <field name="zipcode"/>
                        <field name="name"/>
                        <field name="state_id"/>
                    </form>
                </field>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_city_council">
        <field name="name">Council</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">city.council</field>
        <field name="view_type">form</field>
    </record>

    <menuitem name="Councils" groups="base.group_system" action="action_city_council" parent="base.menu_localisation" id="menu_city_council_partner"/>

