<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="detected_species_tree" model="ir.ui.view">
        <field name="name">detected.species.tree</field>
        <field name="model">detected.species</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location"/>
                <field name="level_mild"/>
                <field name="level_medium" />
                <field name="level_high"/>
            </tree>
        </field>
    </record>

    <record id="detected_species_form" model="ir.ui.view">
        <field name="name">detected.species.form</field>
        <field name="model">detected.species</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="location"/>
                    <field name="level_mild"/>
                    <field name="level_medium" />
                    <field name="level_high"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_detected_species" model="ir.actions.act_window">
        <field name="name">Detected Species conf</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">detected.species</field>
        <field name="view_type">form</field>
    </record>

    <menuitem id="detected_species" parent="limp_contract.menu_limp_contract_conf" name="Detected species DDD"/>

    <menuitem id="detected_species_conf" parent="detected_species" name="Detected species DDD" action="action_detected_species"/>

</odoo>
