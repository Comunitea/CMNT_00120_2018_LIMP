<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data noupdate="1">
        <!--
    Resource: uom.uom.categ
    -->

        <record id="product_uom_categ_volume" model="uom.category">
            <field name="name">Volume</field>
        </record>
        <!--
    Resource: uom.uom
    -->

        <record id="product_uom_liter" model="uom.uom">
            <field name="category_id" ref="product_uom_categ_volume"/>
            <field name="name">l</field>
            <field name="factor" eval="1.0"/>
        </record>

        <record id="product_uom_meter_cubic" model="uom.uom">
            <field name="category_id" ref="product_uom_categ_volume"/>
            <field name="name">m3</field>
            <field name="factor" eval="0.001"/>
            <field name="uom_type">bigger</field>
        </record>

        <record id="product_uom_cl" model="uom.uom">
            <field name="category_id" ref="product_uom_categ_volume"/>
            <field name="name">cl</field>
            <field name="factor" eval="100"/>
            <field name="uom_type">smaller</field>
        </record>

    </data>
</odoo>
